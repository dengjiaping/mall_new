<?xml version="1.0" encoding="utf-8"?>
<!-- 不带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

     <item>
        <shape>
            <solid android:color="@color/color_e5e5e5" />

            <stroke
                android:width="1px"
                android:color="@color/color_e5e5e5" />
        </shape>
    </item>
    
    <item
        android:bottom="15dp"
        android:left="0dp"
        android:right="0dp"
        android:top="15dp">
        <shape>
            <solid android:color="@color/color_e5e5e5" />

            <stroke
                android:width="1px"
                android:color="@color/color_e5e5e5" />
        </shape>
    </item>
  
     <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="1px"
        android:top="0dp">
        <shape>
            <solid android:color="@color/color_e5e5e5" />

            <stroke
                android:width="1px"
                android:color="@color/color_e5e5e5" />
        </shape>
    </item>
    

</layer-list>