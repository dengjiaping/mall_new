<?xml version="1.0" encoding="utf-8"?>
<resources>
    //scale
    <!--商城订单选择控件-->
    <declare-styleable name="DetailView">
        <attr name="cv_text_right_gravity" format="integer" />
        <attr name="cv_text_left_width" format="integer" />
        <attr name="text_left" format="string" />
        <attr name="text_middle" format="string" />
        <attr name="text_right" format="string" />
        <attr name="text_left_color" format="color" />
        <attr name="text_middle_color" format="color" />
        <attr name="text_right_color" format="color" />
        <attr name="text_right_maxLength" format="integer" />
        <attr name="iv_right" format="reference|color" />
        <attr name="tv_left_visible" format="integer">
            <enum name="VISIBLE" value="0x0" />
            <enum name="INVISIBLE" value="0x1" />
            <enum name="GONE" value="0x2" />
        </attr>
        <attr name="iv_right_visible" format="integer">
            <enum name="VISIBLE" value="0x0" />
            <enum name="INVISIBLE" value="0x1" />
            <enum name="GONE" value="0x2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CountDownTextView">
        <attr name="countDownStyle" format="integer">
            <enum name="SECOND" value="0x0" />
            <enum name="MINUTE" value="0x1" />
            <enum name="HOUR" value="0x2" />
        </attr>
        <attr name="afterTime" format="string" />
        <attr name="beforeTime" format="string" />
        <attr name="hourDivider" format="string" />
        <attr name="minuteDivider" format="string" />
        <attr name="secondDivider" format="string" />
    </declare-styleable>

    <declare-styleable name="RulerView">
        <attr name="indicateColor" format="color|reference" />
        <attr name="selectedLineColor" format="color|reference" />
        <attr name="textColor" format="color|reference" />
        <attr name="textSize" format="dimension|reference" />
        <attr name="begin" format="integer|reference" />
        <attr name="end" format="integer|reference" />
        <attr name="indicateWidth" format="dimension|reference" />
        <attr name="indicatePadding" format="dimension|reference" />
    </declare-styleable>
    <declare-styleable name="ImageSelectView">
        <attr name="divide_index" format="integer" />
        <attr name="default_image" format="reference" />
        <attr name="image_txt1" format="string" />
        <attr name="image_txt2" format="string" />
        <attr name="image_max_size" format="integer" />
        <attr name="leftMargin" format="integer" />
        <attr name="rightMargin" format="integer" />
    </declare-styleable>

    <declare-styleable name="PagerSlidingTabStrip">
        <!--选中时text的颜色-->
        <attr name="selectedTabTextColor" format="color" />
        <attr name="selectedTabBackground" format="reference" />
        <attr name="unselectedTabBackground" format="reference" />
        <!--选中时底部线的颜色-->
        <attr name="pstsIndicatorColor" format="color" />
        <attr name="pstsUnderlineColor" format="color" />
        <attr name="pstsDividerColor" format="color" />
        <attr name="pstsIndicatorHeight" format="dimension" />
        <attr name="pstsIndicatorWidth" format="dimension" />
        <attr name="pstsUnderlineHeight" format="dimension" />
        <attr name="pstsDividerPadding" format="dimension" />
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsTabBackground" format="reference" />
        <attr name="pstsShouldExpand" format="boolean" />
        <attr name="pstsTextAllCaps" format="boolean" />
        <attr name="pststabSelectTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PswInputView">
        <attr name="count" format="integer" />
        <attr name="border_color" format="color" />
        <attr name="dot_color" format="color" />
        <attr name="text_visible" format="boolean" />
        <attr name="text_size" format="dimension" />
        <attr name="pwd_style">
            <flag name="rectangle" value="0x0" />
            <flag name="line" value="0x1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="EditView">
        <attr name="et_maxLength" format="integer" />
    </declare-styleable>

</resources>