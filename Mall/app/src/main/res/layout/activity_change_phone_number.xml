<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/default_layout_screen_gap"
            android:gravity="center_vertical"
            android:text="新手机号"
            android:textColor="@color/black"
            android:textSize="@dimen/ts_17" />

        <com.giveu.shoppingmall.widget.EditView
            android:id="@+id/et_phone_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="请输入修改的新手机号"
            android:background="@null"
            android:maxLength="11"
            android:textColorHint="@color/color_40000000"
            android:textSize="@dimen/ts_17" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/default_layout_screen_gap"
            android:gravity="center_vertical"
            android:text="验证码"
            android:textColor="@color/black"
            android:textSize="@dimen/ts_17" />

        <com.giveu.shoppingmall.widget.EditView
            android:id="@+id/et_send_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入验证码"
            android:inputType="number"
            android:background="@null"
            android:maxLength="6"
            android:textColorHint="@color/color_40000000"
            android:textSize="@dimen/ts_17" />

        <com.giveu.shoppingmall.widget.SendCodeTextView
            android:id="@+id/tv_send_code"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/title_color"
            android:textSize="@dimen/ts_16" />
    </LinearLayout>

    <com.giveu.shoppingmall.widget.ClickEnabledTextView
        android:id="@+id/tv_finish"
        style="@style/click_enabled_bt"
        android:layout_marginTop="56dp"
        android:text="完成" />

    <TextView
        android:id="@+id/tv_unreceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/default_layout_screen_gap"
        android:layout_marginTop="10dp"
        android:text="手机收不到验证码？"
        android:textColor="@color/title_color"
        android:textSize="@dimen/ts_14" />
</LinearLayout>