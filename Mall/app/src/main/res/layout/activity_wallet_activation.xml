<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_layout_screen_gap"
        android:text="请填写您的真实信息"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_name"
            style="@style/activity_wallet_activation_iv_style"
            android:src="@drawable/ic_add" />

        <EditText
            android:id="@+id/et_name"
            style="@style/activity_wallet_activation_et_style"
            android:hint="填写您的姓名" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_ident"
            style="@style/activity_wallet_activation_iv_style"
            android:src="@drawable/ic_add" />

        <EditText
            android:id="@+id/et_ident"
            style="@style/activity_wallet_activation_et_style"
            android:hint="填写您的身份证" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_bank_no"
            style="@style/activity_wallet_activation_iv_style"
            android:src="@drawable/ic_add" />

        <EditText
            android:id="@+id/et_bank_no"
            style="@style/activity_wallet_activation_et_style"
            android:hint="银行卡号" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_phone"
            style="@style/activity_wallet_activation_iv_style"
            android:src="@drawable/ic_add" />

        <EditText
            android:id="@+id/et_phone"
            style="@style/activity_wallet_activation_et_style"
            android:hint="手机号" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_code"
            style="@style/activity_wallet_activation_iv_style"
            android:src="@drawable/ic_add" />

        <EditText
            android:id="@+id/et_code"
            style="@style/activity_wallet_activation_et_style"
            android:hint="验证码" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/title_color" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/default_layout_screen_gap"
        android:gravity="center_vertical">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_checkbox_register"
            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已阅读并同意《*************》"
            android:textColor="@color/title_color"
            android:textSize="@dimen/ts_11" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_activation"
        style="@style/me_bt"
        android:layout_marginTop="60dp"
        android:background="@drawable/selector_btn_change_blue"
        android:text="立即激活" />

</LinearLayout>