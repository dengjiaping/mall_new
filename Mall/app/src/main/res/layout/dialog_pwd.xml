<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_top_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="请输入交易密码，以验证身份"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_14" />

    <com.giveu.shoppingmall.view.InputView
        android:id="@+id/inputview_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="23dp" />

    <TextView
        android:id="@+id/tv_dialog_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="16dp"
        android:text="忘记密码？"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_bottom_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left_pwd"
            style="@style/dialog_pwd_tv"
            android:background="@drawable/shape_dialog_pwd_left"
            android:text="取消" />

        <TextView
            android:id="@+id/tv_right_pwd"
            style="@style/dialog_pwd_tv"
            android:background="@drawable/shape_dialog_pwd_right"
            android:text="确定" />
    </LinearLayout>
</LinearLayout>