<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_cash_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_bg_top"
                android:layout_width="match_parent"
                android:layout_height="149dp"
                android:background="@drawable/shape_cash_bg_small"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:text="可用额度（元）"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_14" />

                <TextView
                    android:id="@+id/tv_available_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3000.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_34" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/default_layout_screen_gap"
                android:text="到账金额"
                android:textSize="@dimen/ts_11" />

            <EditText
                android:id="@+id/et_input_amount"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/title_color"
                android:textSize="@dimen/ts_34"
                tools:text="50" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_bg" />

            <com.lichfaker.scaleview.HorizontalScaleScrollView
                android:id="@+id/horizontalScale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lf_scale_view_height="8dip"
                app:lf_scale_view_margin="5dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_layout_screen_gap"
                    android:layout_marginTop="20dp"
                    android:text="选择分期数"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="@dimen/ts_16" />

                <GridView
                    android:id="@+id/gv_staging_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="23dp"
                    android:gravity="center"
                    android:numColumns="4"
                    android:verticalSpacing="6dp" />

                <TextView
                    android:id="@+id/tv_cost_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="21dp"
                    android:layout_marginLeft="@dimen/default_layout_screen_gap"
                    android:layout_marginTop="5dp"
                    android:text="日综合息费0.55%"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/ts_11"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/ll_show_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/default_layout_screen_gap"
                        android:layout_marginRight="@dimen/default_layout_screen_gap"
                        android:background="@color/line_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_draw_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/default_layout_screen_gap"
                            android:text="提款金额：2200"
                            android:textColor="@color/color_4a4a4a"
                            android:textSize="@dimen/ts_18" />

                        <TextView
                            android:id="@+id/tv_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（含咨询费￥200）"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/ts_11" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/default_layout_screen_gap"
                        android:layout_marginRight="@dimen/default_layout_screen_gap"
                        android:background="@color/line_bg" />

                    <TextView
                        android:id="@+id/tv_monthly_payment"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:layout_marginLeft="@dimen/default_layout_screen_gap"
                        android:gravity="center_vertical"
                        android:text="月供：389元"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/ts_18" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/line_bg" />

            <RelativeLayout
                android:id="@+id/rl_add_bank_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/ic_add"
                    android:drawablePadding="7dp"
                    android:gravity="center_vertical"
                    android:text="添加银行卡" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/default_layout_screen_gap"
                    android:src="@drawable/ic_right" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_choose_bank"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_bank"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="@dimen/default_layout_screen_gap"
                    android:layout_marginRight="@dimen/default_layout_screen_gap"
                    android:src="@drawable/ic_gongshang" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="到账银行卡"
                        android:textColor="@color/color_282828"
                        android:textSize="@dimen/ts_14" />

                    <TextView
                        android:id="@+id/tv_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="中国银行（尾号8901）"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/ts_12" />
                </LinearLayout>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:padding="@dimen/default_layout_screen_gap"
                    android:src="@drawable/ic_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="127dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/default_layout_screen_gap"
                    android:layout_marginRight="10dp"
                    android:button="@drawable/selector_checkbox_register"
                    android:checked="true"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="@dimen/ts_12" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="已阅读并同意《************》"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/ts_11" />
            </LinearLayout>
            <!--<com.lichfaker.scaleview.PointerView-->
            <!--android:id="@+id/pv"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

        </LinearLayout>


    </ScrollView>

    <TextView
        android:id="@+id/tv_ensure_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/title_color"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_18" />
</RelativeLayout>
