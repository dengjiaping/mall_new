<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:background="@color/white"
    android:paddingLeft="@dimen/default_layout_screen_gap"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingRight="@dimen/default_layout_screen_gap">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="04/21"
        android:textColor="@color/color_9b9b9b"
        android:textSize="@dimen/ts_14" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="left"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线下商品消费"
            android:textColor="@color/color_9b9b9b"
            android:textSize="@dimen/ts_14" />

        <TextView
            android:id="@+id/tv_creditAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥1000.00"
            android:textColor="@color/color_9b9b9b"
            android:textSize="@dimen/ts_18" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="未结清"
            android:textColor="@color/color_00bbc0"
            android:textSize="@dimen/ts_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:src="@drawable/ic_detail_grey" />
    </LinearLayout>
</LinearLayout>