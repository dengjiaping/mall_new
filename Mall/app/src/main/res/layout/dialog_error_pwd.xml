<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_top_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:gravity="center"
        android:textColor="@color/color_767876"
        android:textSize="@dimen/ts_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_bottom_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left_errorpwd"
            style="@style/dialog_pwd_tv"
            android:background="@drawable/shape_dialog_pwd_left"
            android:text="忘记密码" />

        <TextView
            android:id="@+id/tv_right_errorpwd"
            style="@style/dialog_pwd_tv"
            android:textColor="@color/title_color"
            android:background="@drawable/shape_dialog_pwd_right"
            android:text="重试" />
    </LinearLayout>
</LinearLayout>