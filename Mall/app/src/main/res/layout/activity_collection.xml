<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.giveu.shoppingmall.widget.pulltorefresh.PullToRefreshListView
        android:id="@+id/ptrlv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null" />
    <LinearLayout
        android:id="@+id/ll_bottom_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_layout_screen_gap"
                android:layout_marginRight="@dimen/default_layout_screen_gap"
                android:button="@drawable/selector_checkbox_round" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="全选"
                android:textColor="@color/color_4a4a4a"
                android:textSize="@dimen/ts_18" />

            <TextView
                android:id="@+id/tv_delete_text"
                android:layout_width="121dp"
                android:layout_height="match_parent"
                android:background="@color/title_color"
                android:gravity="center"
                android:text="删除(1)"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_18" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_off_the_shelf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:src="@drawable/ic_off_the_shelf"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:textSize="@dimen/ts_21"
            android:textColor="@color/color_767876"
            android:text="商品已下架"/>
        <TextView
            android:id="@+id/tv_back"
            style="@style/me_bt"
            android:layout_marginTop="112dp"
            android:background="@drawable/selector_btn_change_blue"
            android:text="去看看其他商品" />
    </LinearLayout>

</LinearLayout>