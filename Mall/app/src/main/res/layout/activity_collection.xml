<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.giveu.shoppingmall.widget.pulltorefresh.PullToRefreshListView
        android:id="@+id/ptrlv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/line_bg"
        android:dividerHeight="1px" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/line_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="57dp">
        <CheckBox
            android:id="@+id/cb_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_layout_screen_gap"
            android:layout_marginRight="@dimen/default_layout_screen_gap"
            android:button="@drawable/selector_checkbox_round" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_4a4a4a"
            android:textSize="@dimen/ts_18"
            android:text="全选"/>
        <TextView
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/title_color"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_18"
            android:text="删除(1)"/>
    </LinearLayout>
</FrameLayout>