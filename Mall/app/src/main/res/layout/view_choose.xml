<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_choose_view"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_choose_left"
        style="@style/fragment_newbuild_tv_style1"
        android:layout_marginLeft="@dimen/default_layout_screen_gap"
        android:layout_marginRight="@dimen/default_layout_screen_gap"
        android:textColor="@color/color_4a4a4a" />

    <TextView
        android:id="@+id/tv_choose_right"
        style="@style/fragment_newbuild_tv_style2"
        android:maxLines="1"
        android:ellipsize="end"
       android:layout_marginRight="5dp"/>

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginRight="5dp" />
    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"/>
</LinearLayout>