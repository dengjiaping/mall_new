<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp"
    android:background="@drawable/bg_custom_dialog_viewmode1"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="还款详情"
        android:textSize="@dimen/ts_18" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/dialog_annuity_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首付：￥80"
            android:textSize="@dimen/ts_14" />

        <TextView
            android:id="@+id/dialog_annuity_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="分期数：10期"
            android:textSize="@dimen/ts_14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="11dp"
        android:background="@color/line_bg"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="期数"
            android:textSize="@dimen/ts_14"
            android:textColor="@color/color_9b9b9b"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="月供"
            android:textSize="@dimen/ts_14"
            android:textColor="@color/color_9b9b9b"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="还款日"
            android:textSize="@dimen/ts_14"
            android:textColor="@color/color_9b9b9b"/>
    </LinearLayout>

    <com.giveu.shoppingmall.widget.MaxHeightListView
        android:id="@+id/dialog_annuity_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:divider="@null"
        app:maxHeight="200dp" />

    <TextView
        android:id="@+id/dialog_annuity_confirm"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_margin="7dp"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_login_bt_conner"
        android:gravity="center"
        android:text="我知道了"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_16" />
</LinearLayout>
