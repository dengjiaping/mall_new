<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_layout_screen_gap"
        android:text="请填写您的真实信息"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_bank_no"
            style="@style/activity_wallet_activation_iv_style"
            android:src="@drawable/ic_add" />

        <com.giveu.shoppingmall.me.view.EditView
            android:id="@+id/et_bank_no"
            style="@style/activity_wallet_activation_et_style"
            android:hint="银行卡号"
            android:inputType="number"
            android:maxLength="19" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_phone"
            style="@style/activity_wallet_activation_iv_style"
            android:src="@drawable/ic_add" />

        <com.giveu.shoppingmall.me.view.EditView
            android:id="@+id/et_phone"
            style="@style/activity_wallet_activation_et_style"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_code"
            style="@style/activity_wallet_activation_iv_style"
            android:src="@drawable/ic_add" />

        <com.giveu.shoppingmall.me.view.EditView
            android:id="@+id/et_code"
            style="@style/activity_wallet_activation_et_style"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="6" />

        <com.giveu.shoppingmall.view.SendCodeTextView
            android:id="@+id/tv_send_code"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/color_d8d8d8"
            android:textSize="@dimen/ts_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_layout_screen_gap"
        android:layout_marginTop="19dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cb_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_checkbox_register"
            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已阅读并同意《*************》"
            android:textColor="@color/title_color"
            android:textSize="@dimen/ts_12" />
    </LinearLayout>

    <com.giveu.shoppingmall.view.ClickEnabledTextView
        android:id="@+id/tv_activation"
        style="@style/click_enabled_bt"
        android:layout_marginTop="35dp"
        android:text="立即激活" />
</LinearLayout>