<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_my_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_default_bank_card"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="@dimen/default_layout_screen_gap"
        android:layout_marginRight="@dimen/default_layout_screen_gap"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/bg_default_bank_card"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bank"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="@dimen/default_layout_screen_gap"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_gongshang" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_defalut_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="民生银行"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="储蓄卡"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_14" />

            <TextView
                android:id="@+id/tv_defalut_bank_card_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="* * * *   * * * *   * * * *   3896"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_14" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/default_layout_screen_gap"
        android:text="温馨提示：默认代扣卡不能解除绑定"
        android:textColor="@color/color_40000000"
        android:textSize="@dimen/ts_10" />

    <com.giveu.shoppingmall.widget.NoScrollListView
        android:id="@+id/lv_bank_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="41dp"
        android:divider="@color/white"
        android:layout_marginBottom="60dp"
        android:dividerHeight="10dp" />
</LinearLayout>
    </ScrollView>