<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="@dimen/default_layout_screen_gap"
        android:background="@drawable/shape_bank_item"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_layout_screen_gap"
            android:src="@drawable/ic_gongshang" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="民生银行"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="储蓄卡"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="* * * *   * * * *   * * * *   3896"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/default_layout_screen_gap"
        android:text="温馨提示：默认代扣卡不能解除绑定"
        android:textColor="@color/color_40000000"
        android:textSize="@dimen/ts_10" />

    <ListView
        android:id="@+id/lv_bank_card"
        android:layout_marginTop="41dp"
        android:layout_width="match_parent"
        android:dividerHeight="0px"
        android:divider="@color/transparent"
        android:layout_height="match_parent" />
</LinearLayout>