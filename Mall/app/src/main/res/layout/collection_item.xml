<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <CheckBox
        android:id="@+id/cb_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_layout_screen_gap"
        android:layout_marginRight="@dimen/default_layout_screen_gap"
        android:visibility="gone"
        android:button="@drawable/selector_checkbox_round" />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:src="@drawable/defalut_img_88_88"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_14"
            android:layout_marginTop="12dp"
            android:textColor="@color/color_3e3e3e"
            android:text="vivo Y55全网通高通8核超薄5.2英寸大屏4G智能美颜自拍手机"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_12"
            android:textColor="@color/red"
            android:text="月供：￥407.00 起"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_13"
            android:layout_marginBottom="8dp"
            android:textColor="@color/color_9b9b9b"
            android:text="￥6880.00"/>
    </LinearLayout>
</LinearLayout>