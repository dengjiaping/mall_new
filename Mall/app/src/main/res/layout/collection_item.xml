<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@drawable/selector_collection_item_click"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/cb_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableLeft="@drawable/selector_checkbox_round"
        android:drawablePadding="@dimen/default_layout_screen_gap"
        android:paddingBottom="@dimen/default_layout_screen_gap"
        android:paddingLeft="@dimen/default_layout_screen_gap"
        android:paddingTop="@dimen/default_layout_screen_gap"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="125dp"
        android:layout_height="match_parent"
        android:padding="12dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_layout_screen_gap"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_3e3e3e"
            android:textSize="@dimen/ts_14" />

        <TextView
            android:id="@+id/tv_invalid"
            android:layout_width="33dp"
            android:layout_height="15dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/shape_text_invalid"
            android:gravity="center"
            android:text="失效"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_10"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_month_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_layout_screen_gap"
                android:textColor="@color/red"
                android:textSize="@dimen/ts_12" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="@dimen/default_layout_screen_gap"
                android:textColor="@color/color_9b9b9b"
                android:textSize="@dimen/ts_13" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_bg" />
    </LinearLayout>

</LinearLayout>