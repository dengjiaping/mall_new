<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corners"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="您的钱包余额不足"
        android:textColor="@color/color_1c2838"
        android:textSize="@dimen/ts_17" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:textColor="@color/color_767876"
        android:textSize="@dimen/ts_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="可调整首付比例，支付本次订单。"
        android:textColor="@color/color_767876"
        android:textSize="@dimen/ts_13"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_bottom_white"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/tv_confirm"
            style="@style/dialog_pwd_tv"
            android:background="@drawable/shape_dialog_pwd_right"
            android:textColor="@color/title_color"
            android:textSize="@dimen/ts_14"
            android:text="我知道了" />
    </LinearLayout>
</LinearLayout>