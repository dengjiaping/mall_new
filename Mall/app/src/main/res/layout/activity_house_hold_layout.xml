<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/house_hold_send_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/selector_shopping_item_click">

        <TextView
            android:id="@+id/house_hold_send_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="大家电送货时间"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/house_hold_send_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/house_hold_send_title"
            android:layout_marginLeft="16dp"
            android:gravity="center_horizontal|top"
            android:text="8月31日[周四]"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/house_hold_install_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/selector_shopping_item_click">

        <TextView
            android:id="@+id/house_hold_install_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="大家电安装时间"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/house_hold_install_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/house_hold_install_title"
            android:layout_marginLeft="16dp"
            android:gravity="center_horizontal|top"
            android:text="8月31日[周四]"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_right" />
    </RelativeLayout>

    <Button
        android:id="@+id/house_hold_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="确认" />
</LinearLayout>