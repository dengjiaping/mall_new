<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <com.giveu.shoppingmall.widget.viewpager.PagerSlidingTabStrip
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pager_sliding_tab_strip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:textColor="@color/color_9b9b9b"
        android:textSize="14sp"
        app:pstsDividerColor="#00000000"
        app:pstsIndicatorColor="@color/color_00adb2"
        app:pstsShouldExpand="true"
        app:pstsUnderlineColor="#dddddd"
        app:pstsUnderlineHeight="@dimen/default_line_height"
        app:selectedTabTextColor="@color/color_00adb2"
        app:selectedTabBackground="@drawable/feedbacklist_top_tab_rb_checked"
        app:unselectedTabBackground="@drawable/feedbacklist_top_tab_rb_default"
        />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>