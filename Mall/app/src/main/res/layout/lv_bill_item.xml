<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="33dp"
    android:paddingRight="@dimen/default_layout_screen_gap">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_layoutxml_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="05/27"
            android:textColor="@color/color_9b9b9b"
            android:textSize="@dimen/ts_14" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/default_layout_screen_gap"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_typpe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_checkbox_round"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="线下商品消费"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="@dimen/ts_14" />

                <ImageView
                    android:id="@+id/iv_overdue"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/ic_overdue" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_typpe"
                android:layout_marginLeft="9dp"
                android:button="@drawable/selector_checkbox_round"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="¥1000.00"
                android:textColor="@color/color_9b9b9b"
                android:textSize="@dimen/ts_18" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_detail_grey" />


    </LinearLayout>

</LinearLayout>