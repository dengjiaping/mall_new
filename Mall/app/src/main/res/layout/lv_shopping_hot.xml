<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/fill_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/rl_hot"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@color/default_layoutxml_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="热门品类"
            android:textColor="@color/color_4a4a4a"
            android:textSize="@dimen/ts_17" />

        <TextView
            android:id="@+id/shopping_hot_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/ic_more"
            android:gravity="center"
            android:paddingLeft="@dimen/default_layout_screen_gap"
            android:paddingRight="12dp"
            android:text="更多"
            android:textColor="@color/color_9b9b9b"
            android:textSize="@dimen/ts_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_layoutxml_bg" />

    <com.giveu.shoppingmall.widget.NoScrollGridView
        android:id="@+id/gv_hot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:horizontalSpacing="12dp"
        android:numColumns="2"
        android:verticalSpacing="12dp" />

</LinearLayout>