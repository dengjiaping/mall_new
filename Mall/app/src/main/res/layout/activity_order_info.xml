<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_layoutxml_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_time_left"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_00bbc0"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_hint" />

        <com.giveu.shoppingmall.widget.CountDownTextView
            android:id="@+id/tv_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_15" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_orderNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="订单号："
                        android:textColor="@color/black"
                        android:textSize="@dimen/ts_15" />

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="5dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/color_00bbc0"
                        android:textSize="@dimen/ts_15" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_consignee_info"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/tv_receiver_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:paddingLeft="15dp"
                            android:text="张三"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_15" />

                        <TextView
                            android:id="@+id/tv_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:text="13711112222"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ts_15" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="@dimen/ts_15" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_picture"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_default_pic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="主题主题主题主题主题主题"
                            android:textColor="@color/color_4a4a4a"
                            android:textSize="@dimen/ts_15" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/tv_sale_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="¥3999元"
                                android:textColor="@color/color_474747"
                                android:textSize="@dimen/ts_19" />

                            <TextView
                                android:id="@+id/tv_quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/color_00bbc0"
                                android:textSize="@dimen/ts_15" />

                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="商品合计："
                        android:textColor="@color/color_9b9b9b"
                        android:textSize="@dimen/ts_15" />

                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/color_ff2a2a"
                        android:textSize="@dimen/ts_15" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付方式"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/ts_15" />

                    <TextView
                        android:id="@+id/tv_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_3d3d3d"
                        android:textSize="@dimen/ts_15" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_entity_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <RelativeLayout
                            android:id="@+id/rl_down_payment"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="1dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="首付"
                                android:textColor="@color/color_4a4a4a"
                                android:textSize="@dimen/ts_15" />

                            <TextView
                                android:id="@+id/tv_down_payment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="10%(¥599.90)"
                                android:textColor="@color/color_00bbc0"
                                android:textSize="@dimen/ts_15" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_staging_num"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="1dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分期数"
                                android:textColor="@color/color_4a4a4a"
                                android:textSize="@dimen/ts_15" />

                            <TextView
                                android:id="@+id/tv_staging_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/color_00bbc0"
                                android:textSize="@dimen/ts_15" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_month_payment"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="1dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="月供金额"
                                android:textColor="@color/color_4a4a4a"
                                android:textSize="@dimen/ts_15" />

                            <TextView
                                android:id="@+id/tv_month_payment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="¥110.00"
                                android:textColor="@color/color_00bbc0"
                                android:textSize="@dimen/ts_15" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="1dp"
                            android:background="@color/white"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="大家电："
                                android:textColor="@color/color_4a4a4a"
                                android:textSize="@dimen/ts_15" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center|end"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="送货：8月31日[周四]"
                                    android:textColor="@color/color_4a4a4a"
                                    android:textSize="@dimen/ts_15"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="安装：9月1日[周五]"
                                    android:textColor="@color/color_4a4a4a"
                                    android:textSize="@dimen/ts_15" />
                            </LinearLayout>

                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="10dp"
                                android:paddingTop="15dp"
                                android:text="增值服务"
                                android:textColor="@color/color_4a4a4a"
                                android:textSize="@dimen/ts_15" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="38dp">

                                <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:button="@drawable/selector_checkbox"
                                    android:checked="true"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="25dp"
                                    android:gravity="center"
                                    android:text="手机延保："
                                    android:textColor="@color/color_4a4a4a"
                                    android:textSize="@dimen/ts_14" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="130dp"
                                    android:gravity="center"
                                    android:text="¥99/月"
                                    android:textColor="@color/color_00bbc0"
                                    android:textSize="@dimen/ts_14" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_detail_circle" />
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="38dp">

                                <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:button="@drawable/selector_checkbox"
                                    android:checked="true"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="25dp"
                                    android:gravity="center"
                                    android:text="碎屏险："
                                    android:textColor="@color/color_4a4a4a"
                                    android:textSize="@dimen/ts_14" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="130dp"
                                    android:gravity="center"
                                    android:text="¥99/月"
                                    android:textColor="@color/color_00bbc0"
                                    android:textSize="@dimen/ts_14" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_detail_circle" />
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_marginBottom="5dp">

                                <CheckBox
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:button="@drawable/selector_checkbox"
                                    android:checked="true"
                                    android:gravity="center" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="25dp"
                                    android:gravity="center"
                                    android:text="人身意外险："
                                    android:textColor="@color/color_4a4a4a"
                                    android:textSize="@dimen/ts_14" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="130dp"
                                    android:gravity="center"
                                    android:text="¥99/月"
                                    android:textColor="@color/color_00bbc0"
                                    android:textSize="@dimen/ts_14" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_detail_circle" />
                                </LinearLayout>
                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_virtual_goods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="vertical"

                        >


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:paddingLeft="@dimen/default_layout_screen_gap"
                            android:paddingRight="@dimen/default_layout_screen_gap">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="充值号码"
                                android:textColor="@color/color_4a4a4a"
                                android:textSize="@dimen/ts_15" />

                            <TextView
                                android:id="@+id/tv_recharge_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/color_3d3d3d"
                                android:textSize="@dimen/ts_15" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="1dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:paddingLeft="@dimen/default_layout_screen_gap"
                            android:paddingRight="@dimen/default_layout_screen_gap">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="充值面额"
                                android:textColor="@color/color_4a4a4a"
                                android:textSize="@dimen/ts_15" />

                            <TextView
                                android:id="@+id/tv_recharge_denomination"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/color_3d3d3d"
                                android:textSize="@dimen/ts_15" />
                        </RelativeLayout>

                    </LinearLayout>


                </RelativeLayout>


                <com.giveu.shoppingmall.widget.DetailView
                    android:id="@+id/dv_coupon_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="1dp"
                    app:text_left="优惠券"
                    app:text_right_color="@color/color_00bbc0" />


                <LinearLayout
                    android:id="@+id/ll_user_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/tv_user_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:text="买家留言："
                            android:textColor="@color/color_4a4a4a"
                            android:textSize="@dimen/ts_15" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">


                        <CheckBox
                            android:id="@+id/cb_contract"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/selector_checkbox"
                            android:checked="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已阅读并同意"
                            android:textColor="@color/color_4a4a4a"
                            android:textSize="@dimen/ts_14" />

                        <TextView
                            android:id="@+id/tv_contract"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="消费分期合同"
                            android:textColor="@color/color_00bbc0"
                            android:textSize="@dimen/ts_14" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_footer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_trace"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:gravity="end"
            android:paddingRight="15dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_order_trace"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_grey_line"
                android:gravity="center"
                android:text="订单追踪"
                android:textColor="@color/color_4a4a4a"
                android:textSize="@dimen/ts_13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_trace_and_receice"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingRight="15dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_trace"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_grey_line"
                android:gravity="center"
                android:text="订单追踪"
                android:textColor="@color/color_4a4a4a"
                android:textSize="@dimen/ts_13" />

            <TextView
                android:id="@+id/tv_confirm_receive"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_blue_line"
                android:gravity="center"
                android:text="确认收货"
                android:textColor="@color/color_00bbc0"
                android:textSize="@dimen/ts_13" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_pay"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:paddingLeft="15dp"
            android:visibility="gone">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="支付金额："
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="@dimen/ts_16" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="¥3999.00"
                    android:textColor="@color/color_00bbc0"
                    android:textSize="@dimen/ts_16" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/color_00bbc0"
                android:gravity="center"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="去支付"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_18" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>