<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_question" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="添加收货地址"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/ts_16" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_receiving_address"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/default_layout_screen_gap"
                    android:layout_marginTop="@dimen/default_layout_screen_gap"
                    android:src="@drawable/ic_question" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_layout_screen_gap"
                    android:layout_marginTop="@dimen/default_layout_screen_gap"
                    android:layout_toRightOf="@id/iv_left"
                    android:text="张超"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ts_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/default_layout_screen_gap"
                    android:layout_marginTop="@dimen/default_layout_screen_gap"
                    android:text="18118751982"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ts_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_left"
                    android:layout_marginLeft="@dimen/default_layout_screen_gap"
                    android:layout_marginTop="@dimen/default_layout_screen_gap"
                    android:layout_toRightOf="@id/iv_left"
                    android:text="广东省深圳市福田区沙头街道沙嘴中心103栋602"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="@dimen/ts_15" />

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/default_layout_screen_gap"
                    android:src="@drawable/ic_right"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="@dimen/default_layout_screen_gap"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_goods_img"
                    android:layout_width="103dp"
                    android:layout_height="103dp"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/ic_question" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="@dimen/default_layout_screen_gap"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_goods_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="iphone 7苹果新品全网通4iphone 7苹果新品全网通4G手机果新品全网通4G手机"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/ts_15" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_goods_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_goods_name"
                            android:layout_weight="1"
                            android:text="￥4799.00"
                            android:textColor="@color/color_474747"
                            android:textSize="@dimen/ts_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X1"
                            android:textColor="@color/color_474747"
                            android:textSize="@dimen/ts_15" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_bg" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@color/white"
                android:gravity="right|center"
                android:paddingRight="@dimen/default_layout_screen_gap"
                android:text="商品合计:4799元"
                android:textColor="@color/red"
                android:textSize="@dimen/ts_15" />

            <com.giveu.shoppingmall.widget.DetailView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                mv:text_left="支付方式"
                mv:text_right="即有钱包" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_bg" />

            <com.giveu.shoppingmall.widget.DetailView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                mv:text_left="首付"
                mv:text_right="零首付" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_bg" />

            <com.giveu.shoppingmall.widget.DetailView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                mv:text_left="分期数"
                mv:text_right="24个月" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_bg" />

            <com.giveu.shoppingmall.widget.DetailView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                mv:text_left="月供金额："
                mv:text_right="￥242.10 " />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/default_layout_screen_gap"
                android:paddingRight="@dimen/default_layout_screen_gap">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="@dimen/ts_15"
                    android:text="大家电：" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="送货：8月31日 [周四]"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/ts_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="安装：9月1日 [周五]"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/ts_15" />
                </LinearLayout>

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_right" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/default_layout_screen_gap"
                android:paddingTop="@dimen/default_layout_screen_gap"
                android:text="增值服务"
                android:textColor="@color/color_4a4a4a"
                android:textSize="@dimen/ts_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/default_layout_screen_gap"
                android:paddingRight="@dimen/default_layout_screen_gap">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_checkbox_register"
                    android:checked="true"
                    android:text=""
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="@dimen/ts_12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="手机延保：      ￥99/月"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="@dimen/ts_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_question" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/default_layout_screen_gap"
                android:paddingRight="@dimen/default_layout_screen_gap">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_checkbox_register"
                    android:checked="true"
                    android:text=""
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="@dimen/ts_12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="手机延保：      ￥99/月"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="@dimen/ts_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_question" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/default_layout_screen_gap"
                android:paddingRight="@dimen/default_layout_screen_gap">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_checkbox_register"
                    android:checked="true"
                    android:text=""
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="@dimen/ts_12" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="手机延保：      ￥99/月"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="@dimen/ts_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_question" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_bg" />

            <com.giveu.shoppingmall.widget.DetailView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                mv:text_left="优惠券："
                mv:text_right="满699减30元全品类" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_layout_screen_gap"
                    android:text="买家留言(选填)："
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="@dimen/ts_15" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:background="@null"
                    android:text="对本次交易的说明"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="@dimen/ts_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="157dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/default_layout_screen_gap"
                    android:layout_marginRight="10dp"
                    android:button="@drawable/selector_checkbox_register"
                    android:checked="true"
                    android:text=""
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="@dimen/ts_12" />

                <TextView
                    android:id="@+id/checkbox_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="已阅读并同意消费分期合同"
                    android:textColor="@color/color_4a4a4a"
                    android:textSize="@dimen/ts_14" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/default_layout_screen_gap"
            android:text="支付金额：￥4799.00"
            android:textColor="@color/title_color"
            android:textSize="@dimen/ts_16" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:background="@color/title_color"
            android:gravity="center"
            android:text="去支付"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_18" />
    </LinearLayout>
</RelativeLayout>