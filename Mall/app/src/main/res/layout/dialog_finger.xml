<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="46dp"
    android:layout_marginLeft="@dimen/default_layout_screen_gap"
    android:layout_marginRight="@dimen/default_layout_screen_gap"
    android:background="@drawable/bg_white_corners"
    android:orientation="vertical">

    <ImageView
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46dp"
        android:src="@drawable/ic_finger" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="请验证指纹"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_16" />

    <TextView
        android:id="@+id/tv_identify_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/color_f43530"
        android:textSize="@dimen/ts_16" />

</LinearLayout>