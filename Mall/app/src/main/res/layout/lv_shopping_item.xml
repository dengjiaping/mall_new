<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/iv_commodity"
        android:layout_width="116dp"
        android:paddingRight="16dp"
        android:layout_height="125dp"
        android:paddingTop="11dp"
        android:paddingBottom="25dp"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/default_layout_screen_gap"
        android:src="@drawable/shopping_list_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="11dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/default_layout_screen_gap"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_commodity_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="vivo Y55全网通高通8核超薄5.2英寸大屏4G智能美颜自拍手机"
            android:textColor="@color/color_4a4a4a"
            android:textSize="@dimen/ts_13" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="¥6888"
            android:textColor="@color/color_4a4a4a"
            android:textSize="@dimen/ts_13" />


        <TextView
            android:id="@+id/tv_monthly_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="bottom"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#99E8E8EA" />

    </LinearLayout>


</LinearLayout>