<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="28dp"
    android:background="@drawable/bg_white_corners"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还款明细"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/ts_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（已逾期）"
            android:textColor="@color/red"
            android:textSize="@dimen/ts_18" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="14dp"
        android:background="@color/default_layoutxml_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="14dp"
        android:text="合同号：234567890"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="3dp"
        android:text="交易时间：2017-06-06 12：23"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="3dp"
        android:text="已借天数：20天"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="3dp"
        android:text="逾期天数：10天"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="10dp"
        android:text="取现金额：100元"
        android:textColor="#FF000000"
        android:textSize="@dimen/ts_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="3dp"
        android:text="逾期费用：10元"
        android:textColor="@color/red"
        android:textSize="@dimen/ts_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="3dp"
        android:text="当前息费：20元"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="3dp"
        android:text="当期已还：20元"
        android:textColor="@color/color_00adb2"
        android:textSize="@dimen/ts_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="10dp"
        android:text="当前应还：110元"
        android:textColor="@color/black"
        android:textSize="@dimen/ts_14" />

    <TextView
        android:id="@+id/tv_know"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="33dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/selector_login"
        android:gravity="center"
        android:text="知道了"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_18" />

</LinearLayout>