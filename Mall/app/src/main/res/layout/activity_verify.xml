<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="82dp"
        android:text="已发送验证码到绑定手机"
        android:textColor="@color/color_4a4a4a"
        android:textSize="@dimen/ts_18" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="185 7667 3374"
        android:textColor="@color/color_4a4a4a"
        android:textSize="@dimen/ts_18" />

    <com.giveu.shoppingmall.widget.PassWordInputView
        android:id="@+id/input_view_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:pwd_style="line"
        app:text_visible="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <com.giveu.shoppingmall.widget.SendCodeTextView
                android:id="@+id/tv_send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="重新发送"
                android:paddingLeft="10dp"
                android:textColor="@color/color_00bbc0"
                android:textSize="@dimen/ts_14" />

            <TextView
                android:id="@+id/tv_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="，"
                android:textColor="@color/color_767876"
                android:textSize="@dimen/ts_14"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_unreceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:paddingRight="10dp"
                android:text="收不到验证码"
                android:textColor="@color/color_00bbc0"
                android:textSize="@dimen/ts_14"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>